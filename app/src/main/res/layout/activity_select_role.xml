<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Role"
        android:textSize="20sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Freelancer Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardFreelancer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_gravity="center"
        android:background="@drawable/border_selector"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:tag="freelancer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_freelancer"
                android:contentDescription="Freelancer Logo"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freelancer"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Hire Freelancer Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardHire"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_gravity="center"
        android:background="@drawable/border_selector"
        android:clickable="true"
        android:focusable="true"
        android:tag="hire">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_hr"
                android:contentDescription="Hire Freelancer Logo"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HR"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>
</LinearLayout>
